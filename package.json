{
  "name": "garden-products-monorepo",
  "private": true,
  "scripts": {
    "install:all": "npm --prefix frontend i && npm --prefix backend i",
    "dev:front": "npm --prefix frontend run dev",
    "dev:back": "npm --prefix backend run dev",
    "dev": "concurrently -n FRONT,BACK -c green,blue \"npm:dev:front\" \"npm:dev:back\"",
    "build:front": "npm --prefix frontend run build",
    "start:back": "npm --prefix backend run start"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
